<h1><%= @cocktail.name %> Recipe</h1>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% @doses.each do |dose| %>
    <li><%=dose.ingredient.name%> (<%=dose.description%>) <%= link_to "delete", dose_path(dose), method: :delete%></li>
<% end %>

<%= link_to 'Back', root_path %>

<%= render 'cocktails/dose-form', cocktail: @cocktail, dose: @dose %>